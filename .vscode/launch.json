    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "name": "linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/unit-tests/Tichu-tests",
            "cwd": "${workspaceFolder}/build",
        },
        {
            "preLaunchTask": "build",
            "name": "windows",
            "type": "cppdbg",
            "request": "launch",
            "cwd" : "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/unit-tests/Tichu-tests.exe"
        },
        {
            "preLaunchTask": "build",
            "name": "mac-os",
            "type": "cppdbg",
            "request": "launch",
            "cwd" : "${workspaceFolder}/build",
            "program": "${workspaceFolder}/build/unit-tests/Tichu-tests"
        },
        

    ]
}